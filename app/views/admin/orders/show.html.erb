<div class="container-fluid ">
  <div class="row">
    <div class="col-2 offset-1 text-center">
      <div class="h5 bg-light mt-5 my-3">注文履歴詳細</div>
    </div>
  </div>
  <table class="table table-borderless col-4 ml-5 h6">
    <tr>
      <td class="font-weight-bold">購入者</td>
      <td><%= @order.customer.last_name %><% @order.customer.first_name %></td>
    </tr>
    <tr>
      <td class="font-weight-bold">注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td class="font-weight-bold">配送先</td>
      <td>
        <%= @order.postal_code %>
        <%= @order.address %></br>
        <%= @order.receiver %>
      </td>
    </tr>
    <tr>
      <td class="font-weight-bold">支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
  </table>
  <div class="row">
    <div class="ml-5">
      <table class="table table-borderless">
        <thead class="bg-light">
          <tr>
            <td col="2">商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_item.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.tax_included_price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.tax_included_price * order_item.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="row">
    <table class="table table-borderless h6 ml-5">
      <tr>
        <td class="font-weight-bold">商品合計</td>
        <td><%= @order.payment_amount - @order.postage %></td>
      </tr>
      <tr>
        <td class="font-weight-bold">送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td class="font-weight-bold">請求金額合計</td>
        <td>
          <%= @order.payment_amount %>
        </td>
      </tr>
    </table>
  </div>
</div>