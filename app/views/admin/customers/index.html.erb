<%= form_with model: @customer, url: admin_items_path do |f| %>
<div class="container-fluid">
  <div class="row">
    <div class="offset-md-1">
      <h5 class="d-inline-block m-4 ml-5 bg-light">　会員一覧　</h5>
    </div>
  </div>
  <div class="row　justify-content-center">
    <div class="mx-auto col-md-8 col-md-offset-2 ">
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
            <tbody>
              <% @customer.each do |customer| %>
                <tr>
                  <td>
                    <%= customer.id %>
                  </td>
                  <td>
                    <%= link_to admin_customer_path(customer.id) do %>
                      <%= customer.last_name %><%= customer.first_name %>
                    <% end %>
                  </td>
                  <td>
                    <%= customer.email %>
                  </td>
                  <td>
                    <%= customer.is_deleted %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
      </div>
  </div>
</div>

<% end %>
<%= paginate @customers %>