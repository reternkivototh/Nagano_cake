<%= form_with model: @item, url: admin_items_path  do |f| %>
  <div class="container px-5 px-sm-0 mt-3">
    <div class="row">
      <div class="col-10 offset-1 mb-5">
        <h5 class="d-inline-block mt-4 bg-light">　商品詳細　</h5>
      </div>
          <div class="col-2 offset-1">
            <%= image_tag @item.get_image(400, 300) %>
          </div>
          <div class="col-8">
          <table class="col-8 table table-sm table-borderless">
            <tr>
              <td><%= f.label "商品名" %></td>
              <td colspan="2"><%= @item.name %></td>
              <td><br></td>
            </tr>
            <tr>
              <td><%= f.label "商品説明" %></td>
              <td colspan="2">
                <%= @item.introduction %></td>
              <td><br></td>
            </tr>
            <tr>
              <td><%= f.label "ジャンル" %></td>
              <td colspan="2"><%= @item.genre.name %></td>
              <td><br></td>
            </tr>
            <tr>
              <td><%= f.label "税抜価格" %></td>
              <td colspan="2"><%= @item.price %></td>
              <td><br></td>
            </tr>
            <tr>
              <td><br></td>
              <td><%= link_to"編集する", edit_admin_item_path, class: "btn btn-success rounded btn-sm d-grid gap-2 col-4 mx-auto mt-4" %></td>
            </tr>
          </table>
          </div>
    </div>
  </div>
<% end %>