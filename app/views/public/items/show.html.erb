  <div class="container px-5 px-sm-0 mt-5">
    <div class="row">
      <div class="col-2 offset-2">
        <%= image_tag @item.get_image(400, 300) %>
      </div>
      <div class="col-8">
        <strong class="h3"><%= @item.name %></strong>
        <div class="h5 my-4"><%= @item.introduction %></div>
        <div class="h4 my-5">￥<%= @item.price %>（税込）</div>
        <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
            <div class="d-inline mr-5"><%= f.select :amount, *[1..10], :include_blank => "個数選択    " %></div>
            <div class="d-inline"><%= f.submit "カートに入れる", class: "btn btn-success rounded" %></div>
        <% end %>
      </div>
    </div>
  </div>