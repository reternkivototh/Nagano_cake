<div class="container px-sm-0 mt-3 mb-5">
    <div class="row">
      <div class="col-10 offset-1 mb-2">
        <h5 class="d-inline-block mt-4 mb-2 bg-light">　マイページ　</h5>
      </div>
    </div>
    <div class="row">
      <div class="my-3">
          <strong class="d-inline-block mr-3"><%= "登録情報" %></strong>
          <%= link_to "編集する", edit_public_customer_path, class: "d-inline btn btn-success rounded btn-sm d-grid gap-2 col-8 px-3" %>
      </div>
    </div>
    <div class="row">
      <div class="w-50">
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <td class="table-secondary", scope="col" style="width: 20%">氏名</td>
              <td style="width: 80%"><%= current_customer.last_name %><%= current_customer.first_name %></td>
            </tr>
            <tr>
              <td class="table-secondary">カナ</td>
              <td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td>
            </tr>
            <tr>
              <td class="table-secondary">郵便番号</td>
              <td><%= current_customer.postal_code %></td>
            </tr>
            <tr>
              <td class="table-secondary">住所</td>
              <td><%= current_customer.address %></td>
            </tr>
            <tr>
              <td class="table-secondary">電話番号</td>
              <td><%= current_customer.telephone_number %></td>
            </tr>
            <tr>
              <td class="table-secondary">メールアドレス</td>
              <td><%= current_customer.email %></td>
            </tr>
          </tbody>
        </table>
        <div class="my-5 pb-5">
          <strong class="d-inline-block mr-3"><%= "注文履歴" %></strong>
          <%= link_to "一覧を見る", public_order_path, class: "d-inline btn btn-primary rounded btn-sm d-grid gap-2 col-8 px-3" %>
      </div>
    </div>
</div>
