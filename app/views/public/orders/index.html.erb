<div class="container-fluid">
  <div class="row">
    <div class="col-2 offset-1 text-center">
      <div class="h5 bg-light mt-5 my-3">注文履歴一覧</div>
    </div>
  </div>
  <table class="table col-10 offset-1 table-bordered mb-5">
      <thead class="bg-light">
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>注文詳細</td>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.receiver %><br>
              </td>
            <td><% order.items.each do |item| %>
            <%= item.name %><br>
            <% end %>
            </td>
            <td><%= order.payment_amount %></td>
            <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary rounded" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @order %>
</div>
