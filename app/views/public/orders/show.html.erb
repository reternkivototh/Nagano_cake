<div class="container-fluid ">
  <div class="col-2 offset-1 text-center">
    <div class="h5 bg-light mt-5 my-3">注文履歴詳細</div>
  </div>
  <div class="row">
    <div class="ml-5">
      <p class="font-weight-bold">注文情報</p>
      <table class="table table-bordered">
        <tr>
           <td class="bg-light">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="bg-light">配送先</td>
          <td>
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.receiver %>
          </td>
        </tr>
         <tr>
          <td class="bg-light">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="ml-5">
      <p class="font-weight-bold">請求情報</p>
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">商品合計</td>
          <td><%= @total = @order.payment_amount - @order.postage %></td>
        </tr>
        <tr>
          <td class="bg-light">配送料</td>
          <td><%= @order.postage %></td>
        </tr>
         <tr>
          <td class="bg-light">ご請求額</td>
          <td><%= @order.payment_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered mb-5 ml-5 col-8">
    <thead class="bg-light">
      <tr>
        <th col="2">商品名</th>
        <th>単価(税込)</th>
        <th col="2">数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
      <tr>
        <td col="2"><%= order_item.item.name %></td>
        <td><%= order_item.tax_included_price %></td>
        <td><%= order_item.amount %></td>
        <td><%= order_item.tax_included_price * order_item.amount %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
