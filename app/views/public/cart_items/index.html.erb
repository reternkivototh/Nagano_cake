<%= form_with model: @cart_item, url: public_cart_items_path  do |f| %>
  <div class="container px-5 px-sm-0 mt-3">
    <div class="row">
      <div class="offset-md-2">
        <h5 class="d-inline-block mt-4 mb-3 bg-light">　ショッピングカート　</h5>
      </div>
      <div class="col-3 mb-3 ml-auto">
        <%= f.submit "カートを空にする", class: "btn btn-danger rounded btn-sm mx-auto mt-4" %>
      </div>
      <table class="table col-10 offset-1 table-bordered border-dark">
      <thead class="bg-light">
        <tr>
          <th col="2">商品名</th>
          <th>単価(税込)</th>
          <th col="2">数量</th>
          <th>小計</th>
          <td><br></td>
        </tr>
      </thead>
      <tbody>
        <% @cart_item.each do |cart_item| %>
          <tr>
            <td col="2">
              <%= image_tag cart_item.item.get_image(60, 40) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount%></td>
            <td><%= cart_item.subtotal %></td>
            <td><%= f.submit "削除する", class: "btn btn-danger rounded btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table col-2 offset-4 table-bordered border-dark">
      <tr>
        <td class="table-light">合計金額</td>
        <td>'100000'</td>
      </tr>
    </table>

      <div class="col-10 offset-1 pb-5 mb-5">
              <%= f.submit "新規登録", class: "btn btn-success rounded btn-sm d-grid gap-2 col-4 mx-auto mt-4" %>
      </div>
    </div>
  </div>
<% end %>
